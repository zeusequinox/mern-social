pipeline {
    agent { label 'ubuntu' }

    stages {
        stage('Build') {
            steps {
                sh 'whoami'
                echo 'Creating DockerFile'
                sh "docker build . -t zeusequinox/mern-sample-app"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo "Running Docker Compose"
                sh "docker-compose -f -d compose.yaml up"
            }
        }
    }
}
